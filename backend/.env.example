# 数据库配置
# 开发环境使用 Docker 容器（端口 5432）
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/game_ai_cs?schema=public"

# 生产环境示例（端口 5433）
# DATABASE_URL="postgresql://cs_app:your-password@localhost:5433/cs_prod_db?schema=public"

# JWT 配置
JWT_SECRET="your-secret-key-change-in-production"
JWT_EXPIRES_IN="8h"

# Redis 配置（可选，当前未使用）
REDIS_URL="redis://localhost:6379"

# 服务器配置
PORT=3000
NODE_ENV="development"

# 前端 URL（支持多个，用逗号分隔）
FRONTEND_URL="http://localhost:5173,http://localhost:5174"

# 文件上传配置
UPLOAD_DIR="./uploads"
MAX_FILE_SIZE=10485760

# 阿里云 OSS 配置（可选，如不使用请注释掉）
# OSS_ACCESS_KEY_ID=your-access-key-id
# OSS_ACCESS_KEY_SECRET=your-access-key-secret
# OSS_BUCKET=your-bucket-name
# OSS_REGION=oss-cn-shenzhen
# OSS_ENDPOINT=oss-cn-shenzhen.aliyuncs.com

# Dify API 配置（默认配置，实际使用游戏配置覆盖）
DIFY_API_KEY=default-api-key
DIFY_BASE_URL=https://api.dify.ai/v1
